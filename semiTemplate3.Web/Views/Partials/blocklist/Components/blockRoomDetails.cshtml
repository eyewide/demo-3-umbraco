@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels

@{
    var content = (ContentModels.BlockRoomDetails)Model.Content;
    var settings = (ContentModels.GenericBlockSettings)Model.Settings;

    // Null-safe τιμές
    bool disabled = settings?.Value<bool>("disableSection") ?? false;

    var title = content?.Value("title")?.ToString() ?? string.Empty;
    var text = content?.Value("text")?.ToString() ?? string.Empty;
}

@if (!disabled)
{
    @if (!string.IsNullOrWhiteSpace(title))
    {
        <p>@Html.Raw(title)</p>
    }
    @if (!string.IsNullOrWhiteSpace(text))
    {
        <span class="value">@Html.Raw(text)</span>
    }
}