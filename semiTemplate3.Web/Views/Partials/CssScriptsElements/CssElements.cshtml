@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models.PublishedContent

@{
    // Ασφαλής ανάκτηση του root node
    var home = Model?.Root();
    var scriptsInHeader = home?.Value<string>("scriptsInHeader");
}

<!-- PREFETCH STARTS HERE -->
<link rel="dns-prefetch" crossorigin="anonymous" href="https://cdn.jsdelivr.net">
<link rel="dns-prefetch" href="https://fonts.googleapis.com">

<!-- FONTS STARTS HERE -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Geologica:wght@100..900&amp;display=swap">

<!-- BOOTSTRAP CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">

<!-- SWIPER CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<!-- FLATPICK CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<!--Leaflet Map -->
@if (Model?.IsDocumentType("chaniaMapPage") == true || Model?.IsDocumentType("homePage") == true){
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css">
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
}

<!-- FOR YOUTUBE VIDEO -->
@if (Model?.HasValue("youTubeVideoUrl") == true)
{
    <link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css">
}

<!-- MY STYLE -->
<link rel="stylesheet" href="@Url.Content("~/css/style.css")">

<!-- SCRIPTS IN HEADER -->
@if (!string.IsNullOrWhiteSpace(scriptsInHeader))
{
    @Html.Raw(scriptsInHeader)
}
